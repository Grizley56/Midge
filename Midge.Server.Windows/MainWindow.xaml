<Window x:Class="Midge.Client.Mobile.Server.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Midge.Client.Mobile.Server.Windows"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Grid>
		<Button Content="Start" HorizontalAlignment="Left" Margin="10,42,0,0" VerticalAlignment="Top" Width="126" Click="Start"/>
		<Button Content="Stop" HorizontalAlignment="Left" Margin="10,77,0,0" VerticalAlignment="Top" Width="126" Click="Stop"/>
		<Label Content="{Binding InternalServer.State, Mode=OneWay}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>

	</Grid>
</Window>
